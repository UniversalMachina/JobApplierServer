 const textArea = document.querySelector('textarea.text_answer');

        if (textArea) {
            if (textArea.value) {
                spanText += textArea.value;
                alert(spanText);
            }
            // textArea.value = 'Predefined Text';

            const data = { question: spanText};
            fetch('http://localhost:5000/ask_question', {
                    method: 'POST',
                    headers: {
                    'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                }).then(response => response.json())
                .then(answer => {
                  let strValue = answer.value;
                  // intValue is now the integer received from the server
                  console.log(strValue);  // or handle intValue as needed
                })

                textArea.value = strValue;

            // Dispatch an input event to trigger any listeners for changes to the text area
            const event = new Event('input', { bubbles: true });
            textArea.dispatchEvent(event);

            alert('The text area has been successfully filled!');